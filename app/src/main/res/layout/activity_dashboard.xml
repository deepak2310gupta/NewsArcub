<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DashboardActivity">




    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/containers">
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:background="#DC910F"
        android:id="@+id/SubscribedLayout"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:src="@drawable/crown">
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:fontFamily="@font/coiny"
            android:text="Become a Premium member now!"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_vertical"
            android:id="@+id/txtPremiumMember"
            android:textSize="14sp"></TextView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_gravity="center_vertical"
            app:cardCornerRadius="9dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/crete_round"
                android:padding="3dp"
                android:textAlignment="center"
                android:id="@+id/txtSubscribeBtn"
                android:text="Subscribe"
                android:textColor="#DC910F"
                android:gravity="center_horizontal"></TextView>
        </androidx.cardview.widget.CardView>



    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/menu"
        android:background="?android:attr/windowBackground"
        app:itemIconTint="@drawable/nav_bg"
        app:itemTextColor="@drawable/nav_bg"
        android:id="@+id/bottomNavViewer">
    </com.google.android.material.bottomnavigation.BottomNavigationView>





</LinearLayout>