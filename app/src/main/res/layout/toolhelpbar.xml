<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#D51633"
        android:layout_height="55dp">


        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:layout_margin="8dp"
            android:padding="3dp"
            android:id="@+id/btnImageLoGO">

        </ImageView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@id/btnImageLoGO"
            android:layout_toRightOf="@id/btnImageLoGO"
            android:fontFamily="@font/margarine"
            android:padding="2dp"
            android:text="NewsArcub"
            android:textColor="#FFF"
            android:textSize="26sp"
            android:textStyle="bold"></TextView>


        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="11dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/crown"
            android:padding="5dp"
            android:id="@+id/crownForSubscription"
            android:background="@drawable/shapehelp"
            android:layout_alignParentRight="true">
        </ImageView>



    </RelativeLayout>

</RelativeLayout>