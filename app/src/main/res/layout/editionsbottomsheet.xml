<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#AAFFFCFC"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="7dp"
        app:cardElevation="80dp"
        android:outlineSpotShadowColor="#F83141"
        android:outlineAmbientShadowColor="#F8E53C"
        android:layout_marginRight="13dp"
        app:cardCornerRadius="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/helpingbackground"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/headland_one"
                android:gravity="center_horizontal"
                android:padding="20dp"
                android:text="All Editions"
                android:textColor="#953FEA"
                android:textAlignment="center"
                android:textSize="22sp"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/headland_one"
                android:gravity="center_horizontal"
                android:padding="20dp"
                android:textColor="#953FEA"
                android:text="Morning Editions"
                android:textAlignment="center"
                android:textSize="22sp"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/headland_one"
                android:gravity="center_horizontal"
                android:padding="20dp"
                android:text="Noon Editions"
                android:textColor="#953FEA"
                android:textAlignment="center"
                android:textSize="22sp"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/headland_one"
                android:gravity="center_horizontal"
                android:padding="20dp"
                android:text="Evening Editions"
                android:textColor="#953FEA"
                android:textAlignment="center"
                android:textSize="22sp"></TextView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>